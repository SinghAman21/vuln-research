<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Place Order - La Belle Cuisine</title>

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Your CSS -->
    <link rel="stylesheet" href="/style.css">
</head>

<body>

    <!-- Navigation -->
    <nav class="navbar" id="navbar">
        <div class="nav-brand">
            <a href="/">La Belle Cuisine</a>
        </div>

        <div class="nav-toggle" id="navToggle">
            <i class="fas fa-bars"></i>
        </div>

        <ul class="nav-links" id="navLinks">
            <li><a href="/">Home</a></li>
            <li><a href="/#about">About</a></li>
            <li><a href="/menu">Menu</a></li>
            <li><a href="/#reservations">Reservations</a></li>
            <li><a href="/#contact">Contact</a></li>

            <% if (!user) { %>
                <li><a href="/login">Login</a></li>
            <% } else { %>
                <li><a href="/orders">Orders</a></li>
                <li><a href="/logout">Logout (<%= user.username %>)</a></li>
            <% } %>
        </ul>
    </nav>

    <!-- Header Section -->
    <section class="hero" style="height: 40vh; min-height: 300px;">
        <div class="hero-content">
            <h1>Place an Order</h1>
            <p>Select your favorite dishes</p>
        </div>
    </section>

    <!-- Add Order Form Section -->
    <section class="reservations">
        <div class="container">
            <h2 class="section-title">Order Details</h2>
            <p class="warning" style="text-align: center; color: red; margin-bottom: 20px;">⚠️ VULNERABLE APPLICATION - FOR SECURITY TESTING ONLY</p>

            <form class="reservation-form" method="POST" action="/orders/add">
                <div class="form-group">
                    <label for="item_id">Select Dish</label>
                    <select id="item_id" name="item_id" required>
                        <option value="">-- Choose a Dish --</option>
                        <% items.forEach(item => { %>
                            <option value="<%= item.id %>" <%= (typeof selectedItemId !== 'undefined' && selectedItemId == item.id) ? 'selected' : '' %>><%= item.name %> - ₹<%= item.price %></option>
                        <% }); %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="quantity">Quantity</label>
                    <input type="number" id="quantity" name="quantity" value="1" min="1" required>
                </div>

                <button type="submit" class="btn-primary" style="width: 100%;">Place Order</button>
            </form>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>La Belle Cuisine</h3>
                    <p>Experience the art of fine dining in an elegant atmosphere.</p>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-tripadvisor"></i></a>
                    </div>
                </div>
                <div class="footer-section">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/menu">Menu</a></li>
                        <li><a href="/orders">Orders</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h3>Newsletter</h3>
                    <form class="newsletter-form">
                        <input type="email" placeholder="Enter your email">
                        <button type="submit" class="btn-secondary">Subscribe</button>
                    </form>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 La Belle Cuisine. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- JS -->
    <script src="/js/main.js"></script>

</body>
</html>
