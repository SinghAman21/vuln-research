<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu - La Belle Cuisine</title>

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Your CSS -->
    <link rel="stylesheet" href="/style.css">
    <style>
        .search-container {
            text-align: center;
            margin-bottom: 3rem;
        }
        .search-form {
            display: inline-flex;
            gap: 10px;
            max-width: 600px;
            width: 100%;
        }
        .search-form input {
            flex: 1;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        .admin-controls {
            margin-top: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-top: 1px solid #eee;
            padding-top: 10px;
        }
        .btn-sm {
            padding: 5px 10px;
            font-size: 0.9rem;
            border-radius: 3px;
            text-decoration: none;
            color: white;
            display: inline-block;
        }
        .btn-edit { background-color: #3498db; }
        .btn-delete { background-color: #e74c3c; }
    </style>
</head>

<body>

    <!-- Navigation -->
    <nav class="navbar" id="navbar">
        <div class="nav-brand">
            <a href="/">La Belle Cuisine</a>
        </div>

        <div class="nav-toggle" id="navToggle">
            <i class="fas fa-bars"></i>
        </div>

        <ul class="nav-links" id="navLinks">
            <li><a href="/">Home</a></li>
            <li><a href="/#about">About</a></li>
            <li><a href="/menu">Menu</a></li>
            <li><a href="/#reservations">Reservations</a></li>
            <li><a href="/#contact">Contact</a></li>

            <% if (!user) { %>
                <li><a href="/login">Login</a></li>
            <% } else { %>
                <li><a href="/orders">Orders</a></li>
                <li><a href="/logout">Logout (<%= user.username %>)</a></li>
            <% } %>
        </ul>
    </nav>

    <!-- Header Section -->
    <section class="hero" style="height: 40vh; min-height: 300px;">
        <div class="hero-content">
            <h1>Our Menu</h1>
            <p>Discover our exquisite dishes</p>
            <% if (user && user.role === 'manager') { %>
                <a href="/menu/add" class="btn-primary">Add New Item</a>
            <% } %>
        </div>
    </section>

    <!-- Menu Section -->
    <section class="menu">
        <div class="container">
            <p class="warning" style="text-align: center; color: red; margin-bottom: 20px;">⚠️ VULNERABLE APPLICATION - FOR SECURITY TESTING ONLY</p>

            <div class="search-container">
                <form class="search-form" method="GET" action="/search">
                    <input type="text" name="q" placeholder="Search dishes... (SQL Injection allowed)">
                    <button type="submit" class="btn-primary">Search</button>
                </form>
            </div>

            <div class="menu-items">
                <% menu.forEach(item => { %>
                    <div class="menu-item">
                        <img src="/images/menu-placeholder.jpg" alt="<%= item.name %>" onerror="this.onerror=null;this.src='https://via.placeholder.com/300x200?text=Delicious+Food'">
                        <div class="menu-item-content">
                            <h3 class="menu-item-title"><%= item.name %></h3>
                            <p class="menu-item-price">₹<%= item.price %></p>
                            
                            <% if (user) { %>
                                <div class="admin-controls">
                                    <a href="/orders/add?item_id=<%= item.id %>" class="btn-sm" style="background-color: var(--primary-color);">Order Now</a>
                                    <% if (user.role === 'manager') { %>
                                        <a href="/menu/edit/<%= item.id %>" class="btn-sm btn-edit">Edit</a>
                                        <a href="/menu/delete/<%= item.id %>" class="btn-sm btn-delete">Delete</a>
                                    <% } %>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>La Belle Cuisine</h3>
                    <p>Experience the art of fine dining in an elegant atmosphere.</p>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-tripadvisor"></i></a>
                    </div>
                </div>
                <div class="footer-section">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/menu">Menu</a></li>
                        <li><a href="/orders">Orders</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h3>Newsletter</h3>
                    <form class="newsletter-form">
                        <input type="email" placeholder="Enter your email">
                        <button type="submit" class="btn-secondary">Subscribe</button>
                    </form>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 La Belle Cuisine. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- JS -->
    <!-- JS -->
    <!-- <script src="/js/main.js"></script> -->

</body>
</html>
